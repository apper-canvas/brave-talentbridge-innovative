{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/jobs": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Jobs page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/job/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Job detail page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/about": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "About page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/contact": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Contact page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/employers": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Employers landing page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/employers/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to access employer features",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/:appId/:fields": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/:appId/:emailAddress/:provider": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password page is public",
            "rule": "public"
          }
        ]
      }
}
  },
  "/profile": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view profile",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  }
}